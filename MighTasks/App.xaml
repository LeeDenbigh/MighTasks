<Application x:Class="MighTasks.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MighTasks"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Colour Resources-->
                <ResourceDictionary Source="/Dictionaries/Colours.xaml" />
                <!--Styles Resources-->
                <ResourceDictionary Source="/Dictionaries/Styles.xaml" />
                <!--Icon Resources-->
                <ResourceDictionary Source="/Dictionaries/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
