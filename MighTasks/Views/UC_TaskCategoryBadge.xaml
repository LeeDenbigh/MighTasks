<UserControl x:Class="MighTasks.Views.UC_TaskCategoryBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MighTasks.Views"
             mc:Ignorable="d" >
    <Grid>
        <Border Background="{Binding CategoryBackground}"
                 CornerRadius="5"
                 Padding="20 5">
            <TextBlock Text="{Binding CategoryTitle}"
                       FontSize="12"
                       FontWeight="Regular"
                       Foreground="{Binding CategoryForeground}" />

        </Border>
    </Grid>
</UserControl>
