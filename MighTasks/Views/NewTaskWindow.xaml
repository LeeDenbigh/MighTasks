<Window x:Class="MighTasks.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MighTasks.Views"
        mc:Ignorable="d"
        Title="New Task" Height="800" Width="544"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBox Style="{DynamicResource NewTaskTitleBox}"
                 Grid.Row="1" />

        <!--#region Command Buttons -->
        <Grid Grid.Row="4">
            <Button Style="{StaticResource CompleteButtonStyle}"
                Content="Complete"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"/>

            <Button Style="{StaticResource EditButton}"
                Content="Cancel"
                HorizontalAlignment="Left"
                Margin="20 0 0 0"
                VerticalAlignment="Center"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
